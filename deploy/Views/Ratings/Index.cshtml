@model IEnumerable<deploy.Models.Rating>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Business Name
        </th>
        <th>
            Stars
        </th>
        <th>
            Review
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Business.BusinessName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StarReview)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextReview)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RatingID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RatingID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RatingID })
        </td>
    </tr>
}

</table>
