@{
    ViewBag.Title = "Home Page";
}






<div id="deploycarousel" class="carousel slide" data-ride="carousel" data-pause="hover" data-interval="7500">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#deploycarousel" data-slide-to="0" class="active"></li>
        <li data-target="#deploycarousel" data-slide-to="1"></li>
       
        @*<li data-target="#deploycarousel" data-slide-to="3"></li>
        <li data-target="#deploycarousel" data-slide-to="next number"></li>*@
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/restaurant-people.jpg" style="width: 600px"/>
            @*<img src="..." alt="..." />*@
            <div class="carousel-caption">
                <div id="box2">
                    <h3 id="box2">...</h3>
                    <p id="box2">...</p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/clothes.jpg" style="width:600px"/>
            @*<img src="..." alt="..." />*@
            <div class="carousel-caption">
                <div id="box2">
                    <h3>...</h3>
                    <p>...</p>
                </div>
            </div>
        </div>
     
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#deploycarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#deploycarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<!-- Carousel -->






